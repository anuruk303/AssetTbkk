@page
@model tbkk_AC.Pages.Brands.CreateModel

@{
    ViewData["Title"] = "Create";
}
    <div id="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Asset Control</li>
                <li class="breadcrumb-item active">Brand</li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
            <div class="card ">
                <div class="card-header" style="font-weight:bold;color:darkblue;">
                    Create
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group row">
                                    <label asp-for="Brand.BrandName" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="Brand.BrandName" class="form-control" placeholder="BrandName" />
                                        <span asp-validation-for="Brand.BrandName" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label asp-for="Brand.Status" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="Brand.Status" class="form-control" value="Using" readonly />
                                        <span asp-validation-for="Brand.Status" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Image</label>
                                    <div class="col-sm-8">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">Upload Image</span>
                                            </div>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" name="photo" id="pho1" asp-for="Brand.Image" accept="image/jpeg,image/jpg" onchange="run1()">
                                                <label class="custom-file-label" for="inputGroupFile01" id="pho2">Choose file</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    <div class="form-group row" style="float:right; margin-right:0% ; margin-top:1%">
                                        <a asp-page="./Index">
                                            <button type="button" class="btn btn-outline-secondary">
                                                Back
                                            </button>
                                        </a>
                                        <input style="margin-left:10px" type="submit" value="Confirm" class="btn btn-outline-success" />
                                    </div>
</form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div>
</div>
<script>
    function run() {
        document.getElementById("pho2").value = document.getElementById("pho1").value
    }function run1() {
        document.getElementById("pho2").innerHTML = document.getElementById("pho1").value
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
