    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="Joinasset" role="tabpanel" aria-labelledby="Joinasset-tab">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="3">
                        <thead>
                            <tr>
                                <th>
                                    Asset
                                </th>
                                <th>
                                    Asset Join
                                </th>

                                <th>
                                    Status
                                </th>



                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Join_Asset_Asset)
                            {
                                if (Model.Asset.AssetID == item.Asset_AssetID || Model.Asset.AssetID == item.AssetSon)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.Asset.AssetName)
                                        </td>
                                        <td>

                                            @foreach (var item1 in Model.Asset1)
                                            {
                                                if (item.AssetSon == item1.AssetID && item.AssetSon != Model.Asset.AssetID)
                                                {
                                                    <a asp-page="../Assets/Details" asp-route-id="@item.AssetSon">
                                                        @Html.DisplayFor(modelItem => item1.AssetName)
                                                    </a>
                                                }
                                                if (item.Asset_AssetID == item1.AssetID && item.AssetSon == Model.Asset.AssetID)
                                                {
                                                    <a asp-page="../Assets/Details" asp-route-id="@item.Asset_AssetID">
                                                        @Html.DisplayFor(modelItem => item1.AssetName)
                                                    </a>
                                                }

                                            }

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>

                                        <td width="19%">
                                            <a asp-page="../JoinAsset_Assets/Edit" asp-route-id="@item.JoinAsAsID">
                                                <button type="button" class="btn btn-outline-warning">
                                                    Edit

                                                </button>
                                            </a>
                                            <a asp-page="../JoinAsset_Assets/Delete" asp-route-id="@item.JoinAsAsID">
                                                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal" onclick="Delete(@item.JoinAsAsID)">Delete</button>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
