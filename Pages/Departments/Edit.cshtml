@page
@model tbkk_AC.Pages.Departments.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Asset Control</li>
            <li class="breadcrumb-item active">Department</li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
        <div class="card ">
            <div class="card-header" style="font-weight:bold;color:darkblue;">
                Edit
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Department.DepartmentID" />
                            <div class="form-group row">
                                <label asp-for="Department.DepartmentName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Department.DepartmentName" class="form-control" />
                                    <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Department.Status" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Department.Status" class="form-control" value="Using" readonly />
                                    <span asp-validation-for="Department.Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row" style="float:right; margin-right:0% ; margin-top:1%">
                                <a asp-page="./Index">
                                    <button type="button" class="btn btn-outline-secondary">
                                        Back
                                    </button>
                                </a>
                                <input style="margin-left:10px" type="submit" value="Confirm" class="btn btn-outline-success" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
